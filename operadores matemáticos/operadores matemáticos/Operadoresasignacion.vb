Module Operadoresasignacion
    Sub main()

        'Operadores asignación: = , += , -= , *= , /=

        Dim x As Integer
        'sumar 1 as x --> x = x + 1
        x += 1

        Console.WriteLine("x = " & x)

        'restar 1 a x --> x = x - 1
        x -= 1

        Console.WriteLine("x = " & x)

        Console.ReadLine()

    End Sub

End Module
